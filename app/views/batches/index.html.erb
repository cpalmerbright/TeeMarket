<p id="notice"><%= notice %></p>

<h1>Batches</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Quantity</th>
      <th>Fabric</th>
      <th>Color</th>
      <th>Expiry</th>
      <th>Highest Bid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= batch.manufacturer.name %></td>
        <td><%= batch.quantity %></td>
        <td><%= batch.fabric %></td>
        <td><%= batch.color %></td>
        <td><%= batch.expired? ? "Expired": batch.time_remaining %> </td>
        <td><%= batch.highest_current_offer.nil? ? 'No offers made': '$' + batch.highest_current_offer.amount.to_s %></td>
        <td><%= link_to 'Show', manufacturer_batch_path(@manufacturer, batch) %></td>
        <td><%= link_to 'Edit', edit_manufacturer_batch_path(@manufacturer, batch) %></td>
        <td><%= link_to 'Destroy', manufacturer_batch_path(@manufacturer, batch), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
