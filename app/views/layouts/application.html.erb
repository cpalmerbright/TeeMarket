<!DOCTYPE html>
<html>
  <head>
    <title>Teemarket</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="hat">
      <%= link_to "Manufacturers", manufacturers_path %>
      <%= link_to "Batches", batches_path %>
      <%= link_to "Wholesalers", wholesalers_path %>
    </div>
  </head>
  <% if @manufacturer %>
    <hr>
    <%= link_to @manufacturer.name, manufacturer_path(@manufacturer) %>
    <%= link_to 'Batches', manufacturer_batches_path(@manufacturer) %>

<% end %>
  <body>
    <%= yield %>
  </body>
</html>
